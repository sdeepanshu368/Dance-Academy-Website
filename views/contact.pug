extends base.pug

block scripts
    script(src='../static/index.js')

block style
    style
        include ../static/style.css
        include ../static/contact-style.css

block content
    div.container
        h1 
            | Contact Us
            | #{params}
        form(action="/contact", method="post", class="myForm")
            input(type="text" class="myInput" name="user" placeholder="Enter your name" required)
            input(type="phone" class="myInput" name="phone" placeholder="Enter your phone number" pattern="[6789][0-9]{9}" required)
            input(type="email" class="myInput" name="email" placeholder="Enter your email" required)
            input(type="text" class="myInput" name="address" placeholder="Enter your address" required)
            input(type="textarea" class="myInput" name="desc" placeholder="Feedback")
            button(class="btn")
                | Submit